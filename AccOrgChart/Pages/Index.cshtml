@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style type="text/css">
    .orgchart {
        background: #fff;
    }
</style>

<div class="text-center">
    <label>Activity</label>
    <select class="form-select" id="ddlActivities" onchange="activityChange(this)"></select>
</div>
<div class="text-center">
    <label>Sub-Activity</label>
    <select class="form-select" id="ddlSubActivities" onchange="activityChange(this)"></select>
</div>
<hr />

<div class="text-center">
    <div id="chart-container"></div>
</div>

<div class="modal" id="modalContent" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span>Edit</span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="frmUpdateSubActivity">
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group p-3">
                            <div class="form-check">
                                <input type="checkbox" id="chkSubActivity" onchange="changeSubActivityDesc(this)" class="form-check-input" value="Change Sub-Activity Name" />
                                <label class="form-check-label" for="flexCheckDefault">
                                    Edit Sub-Activity Description
                                </label>
                            </div>
                            <input id="txtSubActivityDesc" name="txtSubActivityDesc" class="form-control" readonly="readonly" />
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a class="btn btn-primary" onclick="submitForm()">Save changes</a>
                </div>
            </form>

            <form id="frmUpdateTask">
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group p-3">
                            <label>Role</label>
                            <select id="ddlRoles" name="ddlRoles" class="form-select">
                            </select>
                        </div>
                        <div class="form-group p-3">
                            <label>Task</label>
                            <select id="ddlTasks" name="ddlTasks" class="form-select" onchange="onTaskChange(this)">
                            </select>
                        </div>
                        <div class="form-group p-3">
                            <div class="form-check">
                                <input type="checkbox" id="chkTask" onchange="changeTaskDesc(this)" class="form-check-input" value="Change Task Name" />
                                <label class="form-check-label" for="flexCheckDefault">
                                    Edit Task Description
                                </label>
                            </div>

                            <input id="txtTaskDesc" name="txtTaskDesc" class="form-control" readonly="readonly" />

                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a class="btn btn-primary" onclick="submitForm()">Save changes</a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/js/index.js"></script>

}

